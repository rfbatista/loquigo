	"version": "0.2.0",
	"configurations": [
		
			{
				"name": "Connect to external session",
				"type": "go",
				"debugAdapter": "dlv-dap", // `legacy` by default
				"request": "attach",
				"mode": "remote",
				"port": 2345,
				"host": "localhost", // can skip for localhost
				"substitutePath": [
					{ "from": "${workspaceFolder}/engine", "to": "/app" },
			]
			}
	]
}